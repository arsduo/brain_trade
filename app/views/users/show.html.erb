
<div class= "top_container">

    <div class="picture_container">
        <% provide(:title, @user.first_name) %>
        <h1><%= gravatar_for @user %></h1>
        <div id="credits" class="btn btn-large disabled" href="#"><i class="icon-star"></i> Credits: <%= @user.credit  %></div>
        <br><br>
        <div class="teaching_button">
          <a class="btn" href="/offerings/new">
            <i class="fa fa-flag fa-2x pull-left"></i><i class="icon-leaf"></i></i> Teach Something New!</a>
      
        <div class="edit_button_profile"><%= link_to "Edit", edit_user_path(current_user),:remote => true %></div>
         <br>
    </div id="delete"><%= link_to "Delete", "/users/delete", :method => :delete, :class => "btn btn-link", :confirm => "are you sure you want to delete your profile?" %>
        </div>
    </div>


    <div class="profile_info_container">
        <div class="profile_name"><h1><%= @user.first_name %></h1></div>
      <!-- <p id="profile_info"> Hi, My name is: <#%= @user.first_name %></p><br> -->
      <!-- <p id="profile_info"> Last name: <#%= @user.last_name %></p><br> -->
      <!-- <p id="profile_info"> Email: <#%= @user.email %></p><br> -->

    <div class="bottom_container">
    
    <div class="thigs_i_teach">
      <h3 id="teach_title">I teach:</h3>
        <ul id="subject_grouping"><% @user.offerings.each do |offering| %>
          <li id="teach_name"><%= link_to offering.subject.name, offering_path(offering) %></li>
          <% end %>
        </ul>
      <br><br>
      
    <div id="bio_info">Bio: <%= @user.bio %></div>
    </div>

    </div>
    <% if @user.id == current_user.id %>
        <%= render "teacher_meetup_list" %>
        <%= render "student_meetup_list" %>
       <br id="clear">
    <% end %>
<div>
      
  <br id="clear">
  
   

