<h1>Search Results</h1>

<h2>Categories</h2>

<div class ="wrapper">
<% @categories.each do |category| %>
  <ul class="well well-small">
    <a> <span class="badge badge-info"><%= category.subjects.all.count %></span>&nbsp&nbsp<%= link_to category.name, category_path(category.id), :class => "categories" %></a>
    
  </ul>
<% end %>
<br>
</div>

<h2>Subjects</h2>

<div class="subjects_yay">
    <% @subjects.each do |subject| %>
		<ul class="well well-small">
		    <a> <span class="badge badge-info"><%= subject.category.subjects.all.count %></span>&nbsp&nbsp<%= link_to subject.category.name, category_path(subject.category.id), :class => "categories" %></a>
		    
		

      <ul class="well well-small">
        <a><span class="badge badge-success"><%= subject.offerings.all.count %></span>&nbsp&nbsp<%= link_to subject.name, subject_path(subject.id), remote: true, :class => "subjects" %></a>
      </ul>
           <div class="hide<%=subject.id%>" style="display:none;">
            <% subject.offerings.each do |offering| %>
              <ul class="list-group" >
                <li class="list-group-item" id="subjectid<%=subject.id%>">
                   <%= link_to offering_url(offering) do %>
                        <%= gravatar_for offering.teacher %>
                        <%= offering.teacher.first_name %>
                      <% end %>
                </li>
              </ul>
            <% end %>
          <br>
          </ul>
          </div>
    <% end %>
  </div> 